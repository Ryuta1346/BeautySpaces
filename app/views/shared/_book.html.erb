<%= form_for(@reservation) do |f| %>
  <div>
    <%= f.label :サロン %>
    <%= f.collection_select :salon_reservation_id, SalonReservation.all, :id, :book_time %>
  </div>

  <div>
    <%= f.label :スタイリスト %>
    <%= f.collection_select :stylist_reservation_id, StylistReservation.all, :id, :book_time %>
  </div>

  <div>
    <%= f.submit '予約する' %>
  </div>
<% end %>