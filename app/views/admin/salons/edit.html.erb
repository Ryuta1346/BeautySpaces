<div style="width: 15%; height:500px; border: 1px solid;float: left;">
  <%= render 'admin/salons/sidebar' %>
</div>

<div style="width:84%; border: 1px solid;float: right; margin: auto 0;">
  <h2>Edit <%= @salon.name %></h2>

  <%= form_for(@salon) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>


    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.label :category %>
      <%= f.collection_select :category_id, Category.all, :id, :name %>
    </div>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :prefecture %>
      <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name %>
    </div>

    <div>
      <%= f.label :place %>
      <%= f.text_field :place%>
    </div>

    <div>
      <%= f.label :manage %>
      <%= f.text_field :manage %>
    </div>

    <div>
      <%= f.label :tel %>
      <%= f.text_field :tel %>
    </div>

    <div>
      <%= f.label :features %>
      <%= f.text_field :features %>
    </div>

    <div>
      <%= f.label :cut_price %>
      <%= f.number_field :cut_price %>
    </div>

    <div>
      <%= f.label :num_of_stylists %>
      <%= f.number_field :num_of_stylists %>
    </div>

    <div>
      <%= f.label :num_of_sheets %>
      <%= f.number_field :num_of_sheets %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <h3>Delete Salon</h3>
  <p><%= button_to "Delete Salon", admin_salon_path, data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", admin_salon_path %>
</div>