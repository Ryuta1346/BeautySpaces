<div style="width: 15%; height:500px; border: 1px solid;float: left;">
  <%= render 'admin/salons/sidebar' %>
</div>

<div style="width:80%; border: 1px solid;float: right; margin: auto 0;padding-left: 20px;">
  <h2><%= current_salon.name %>の予約一覧</h2>
  <table style="text-align: center; margin-bottom: 30px;">
    <thead>
    <tr>
      <th>予約日時</th>
      <th>スタイリスト名</th>
      <th>メニュー名</th>
    </tr>
    </thead>

    <tbody>
    <% @reservations.each do |r| %>
      <tr>
        <td><%= r.stylist_reservation.simple_time %></td>
        <td><%= r.stylist_reservation.stylist.name %></td>
        <td><%= r.menu.menu_name %></td>
        <td><%= link_to '詳細', admin_salon_reservation_path(r) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
